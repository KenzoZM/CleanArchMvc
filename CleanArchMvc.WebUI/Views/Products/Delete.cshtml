@model CleanArchMvc.Application.DTOs.ProductDTO

<div class="container bg-primary p-5 rounded-3">

    <div class="mb-3 text-center">
        <h1 class="text-light">Delete Product</h1>
        <h3 class="text-light">Are you sure to delete this?</h3>
    </div>

    <form method="post" asp-controller="Products" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label text-light">Name: </label>
            <input type="text" class="form-control" asp-for="Name" id="Name" readonly>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label text-light">Description: </label>
            <input type="text" class="form-control" asp-for="Description" id="Description" readonly>
        </div>

        <div class="mb-3">
            <label asp-for="Image" class="form-label text-light">Image: </label>
            <input type="text" class="form-control" asp-for="Image" id="Image" readonly>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Price" class="form-label text-light">Price: </label>
                <input type="text" class="form-control" asp-for="Price" id="Price" readonly>
            </div>
            <div class="col">
                <label asp-for="Stock" class="form-label text-light">Stock: </label>
                <input type="text" class="form-control" asp-for="Stock" id="Stock" readonly>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label text-light">Category: </label>
            <input type="text" class="form-control" value="@ViewData["CategoryName"]" readonly>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Delete</button>
            <a class="btn btn-info w-50" asp-controller="Products" asp-action="Index">Back To List</a>
        </div>
    </form>
</div>
